# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_CLIENT_SECRET=your_discord_client_secret_here

# Server Configuration
PORT=3000
NODE_ENV=production
HOST=0.0.0.0

# Security Configuration
WEBHOOK_SECRET=your_webhook_secret_here
API_KEY=your_api_key_here
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/discord-mcp.log

# Database (if needed)
DATABASE_URL=sqlite://./data/discord-mcp.db

# Discord Server Defaults
DEFAULT_GUILD_ID=your_default_guild_id_here
ADMIN_ROLE_ID=your_admin_role_id_here
MODERATOR_ROLE_ID=your_moderator_role_id_here

# Webhook Configuration
WEBHOOK_TIMEOUT=30000
MAX_WEBHOOK_PAYLOAD_SIZE=1048576

# Feature Flags
ENABLE_CHANNEL_MANAGEMENT=true
ENABLE_ROLE_MANAGEMENT=true
ENABLE_WEBHOOK_SYSTEM=true
ENABLE_SERVER_CONFIG=true
